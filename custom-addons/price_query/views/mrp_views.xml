<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="mrp_production_view_form_inherit_pq" model="ir.ui.view">
            <field name="name">mrp.production.view.form.inherit</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <field name="product_id" position="before">
                    <field name="pq_line_id" attrs="{'invisible': [('source', '=', 'pq')]}" />
                </field>
                <xpath expr="//field[@name='move_raw_ids']//tree//field[@name='product_uom'][2]" position="after">
                    <field name="is_child" optional="show" />
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_show_child" type="object" class="oe_stat_button" icon="fa-list" string="Childs"/>
                </xpath>
            </field>
        </record>
    
    </data>

</odoo>
