<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="price_query_view_form" model="ir.ui.view">
            <field name="name">price.query.view.form</field>
            <field name="model">price.query</field>
            <field name="arch" type="xml">
                <form string="Price Query">
                    <header>
                        <button string="Draft" states="cancel" name="action_draft" type="object" class="oe_highlight"/>
                        <button string="Process" states="draft" name="action_process" type="object" class="oe_highlight"/>
                        <button string="Cancel" states="draft" name="action_cancel" type="object"/>
                        <button string="Process" name="process_price_query" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('state', '!=', 'done'), ('has_processed', '=', True)]}"/>
                        <field name="state" widget="statusbar" class="oe_field_statusbar" />
                        <field name="has_processed" invisible="1" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_show_line" type="object" class="oe_stat_button" icon="fa-list" string="Line" />
                        </div>
                        <div class="oe_title">
                            <h1><field class="text-break" name="name" readonly="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="active" invisible="1" />
                                <field name="opportunity_id" readonly="1" />
                                <field name="partner_id" readonly="1" />
                                <field name="inquiry_id" readonly="1" />
                                <field name="department_ids" widget="many2many_tags" string="Sent To" />
                                <field name="user_id" readonly="1" />
                            </group>
                            <group>
                                <field name="date" readonly="1" />
                                <field name="due_date" />
                                <field name="priority" widget="priority" />
                            </group>
                        </group>
                        <notebook>
                            <page name="products" string="Products">
                                <field name="line_ids">
                                    <tree> 
                                        <field name="query_id" invisible="1" />
                                        <field name="line_id" invisible="1" />
                                        <field name="product_tmpl_id" optional="show" />
                                        <field name="description" optional="hide" />
                                        <field name="qty" optional="show" />
                                        <field name="uom_id" optional="show" />
                                        <field name="need_price" optional="show" />
                                        <field name="price_unit" widget="monetary" optional="show" />
                                        <field name="need_sheet" optional="show" />
                                        <field name="new_request" optional="hide" />
                                        <field name="state" optional="show" />
                                        <field name="is_won" optional="hide" />
                                        <field name="stage_id" optional="hide" />
                                    </tree>
                                </field>
                                <group colspan="4">
                                    <field colspan="2" name="note" nolabel="1" placeholder="Notes in Price Query..."/>
                                </group>
                            </page>
                            <page name="pq" string="Price Query">
                                <group>
                                    <field name="attachment_ids" widget="many2many_attachment_preview" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="price_query_view_tree" model="ir.ui.view">
            <field name="name">price.query.view.tree</field>
            <field name="model">price.query</field>
            <field name="arch" type="xml">
                <tree string="Price Query" create="False">
                    <field name="name" />
                    <field name="user_id" />
                    <field name="opportunity_id" />
                    <field name="partner_id" />
                    <field name="date" />
                    <field name="due_date" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="price_query_action" model="ir.actions.act_window">
            <field name="name">Price Query</field>
            <field name="res_model">price.query</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
            id="price_query_menu"
            name="Price Query"
            action="price_query_action"
            parent="crm_management.crm_root_menu"
            sequence="10"
        />


        <record id="price_query_line_view_form" model="ir.ui.view">
            <field name="name">price.query.line.view.form</field>
            <field name="model">price.query.line</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <form string="Line of Price Query">
                    <header>
                        <!-- <button string="Generate BoM" name="generate_bom" type="object"/> -->
                        <!-- <button string="Generate Product" name="generate_product" type="object"/> -->
                        <button string="Approve" states="requested" name="action_approved" type="object" class="oe_highlight"/>
                        <button string="Potential" states="requested" name="action_potential" type="object"/>
                        <button string="Refuse" states="requested" name="action_refused" type="object"/>
                        <field name="state" widget="statusbar" class="o_field_statusbar"/>
                    </header>
                    <sheet>
                        <field name="query_id" readonly="1" invisible="1" />
                        <field name="name" readonly="1" invisible="1" />
                        <field name="read_only" readonly="1" invisible="1" />
                        <group>
                            <group>
                                <field name="product_id" attrs="{'readonly': [('read_only', '=', True)], 'invisible': [('product_id', '=', False)]}" />
                                <field name="product_tmpl_id" attrs="{'readonly': [('read_only', '=', True)]}" />
                                <field name="description" attrs="{'readonly': [('read_only', '=', True)]}" />
                                <field name="qty" />
                                <field name="uom_id" />
                            </group>
                            <group>
                                <field name="need_price" />
                                <field name="price_unit" attrs="{'invisible': [('need_price', '=', False)]}" />
                                <field name="need_sheet" />
                                <field name="bom_id" attrs="{'invisible': ['|', ('need_sheet', '=', False), ('bom_id', '=', False)], 'readonly': True}" />
                            </group>
                        </group>
                        <group>
                            <field name="reference_id" attrs="{'invisible': [('product_id', '>', 0), ('product_tmpl_id', '=', False)]}" />
                            <field name="remark" />
                            <field name="stage_id" />
                        </group>
                        <notebook>
                            <page name="datasheet" string="Drawing &amp; Datasheet">
                                <label for="variant_ids" string="Attributes &amp; Variants" />
                                <field name="variant_ids" widget="one2many" context="{'show_attribute': False}" attrs="{'readonly': [('read_only', '=', True)]}" >
                                    <tree editable="bottom" create="false" delete="false" >
                                        <field name="line_id" invisible="1" />
                                        <field name="attribute_id" />
                                        <field name="value_id" context="{'show_attribute': False, 'default_attribute_id': attribute_id, 'template_for_attribute_value': parent.product_tmpl_id}" />
                                    </tree>
                                </field>
                                <label for="specification_ids" string="Specification" />
                                <field name="specification_ids" widget="one2many" context="{'show_attribute': False}">
                                    <tree editable="bottom" create="false" delete="false" >
                                        <field name="line_id" invisible="1" />
                                        <field name="type_id" />
                                        <field name="value_id" />
                                    </tree>
                                </field>
                            </page>
                            <page name="reference" string="Reference Price">
                                <field name="reference_ids">
                                    <tree editable="bottom">
                                        <field name="line_id" invisible="1" />
                                        <field name="project" />
                                        <field name="price_unit" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="show_datasheet_view_form" model="ir.ui.view">
            <field name="name">price.query.line.view.form</field>
            <field name="model">price.query.line</field>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <form string="Datasheet">
                    <sheet>
                        <notebook>
                            <page name="datasheet" string="Drawing &amp; Datasheet">
                                <label for="variant_ids" string="Attributes &amp; Variants" />
                                <field readonly="1" name="variant_ids" widget="one2many" context="{'show_attribute': False}">
                                    <tree editable="bottom">
                                        <field name="line_id" invisible="1" />
                                        <field name="attribute_id" />
                                        <field name="value_id" />
                                    </tree>
                                </field>
                                <label for="specification_ids" string="Specification" />
                                <field readonly="1" name="specification_ids" widget="one2many" context="{'show_attribute': False}">
                                    <tree editable="bottom">
                                        <field name="line_id" invisible="1" />
                                        <field name="type_id" />
                                        <field name="value_id" />
                                    </tree>
                                </field>
                            </page>
                            <page name="reference" string="Reference Price">
                                <field readonly="1" name="reference_ids">
                                    <tree editable="bottom">
                                        <field name="line_id" invisible="1" />
                                        <field name="project" />
                                        <field name="price_unit" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="price_query_line_view_tree" model="ir.ui.view">
            <field name="name">price.query.line.view.tree</field>
            <field name="model">price.query.line</field>
            <field name="arch" type="xml">
                <tree string="Price Query Line">
                    <field name="product_id" optional="hide" />
                    <field name="product_tmpl_id" />
                    <field name="qty" />
                    <field name="need_price" />
                    <field name="need_sheet" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="price_query_line_action" model="ir.actions.act_window">
            <field name="name">Price Query Line</field>
            <field name="res_model">price.query.line</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
    
    </data>

</odoo>
