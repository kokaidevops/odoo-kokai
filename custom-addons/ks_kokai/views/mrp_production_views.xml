    <record id="action_mrp_production_by_level" model="ir.actions.act_window">
        <field name="name">Manufacturing Orders by Level</field>
        <field name="res_model">mrp.production</field>
        <field name="view_mode">tree,form,pivot,graph</field>
        <field name="context">{'group_by': 'production_level'}</field>
        <field name="domain">[('production_level', '>', 0)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No manufacturing orders with BOM series levels found!
            </p>
            <p>
                Manufacturing orders created from BOM series will appear here organized by production level.
            </p>
        </field>
    </record>


    <!-- Inherit Production Form -->
    <record id="mrp_production_form_view_weight" model="ir.ui.view">
        <field name="name">mrp.production.form.weight</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='miscellaneous']" position="before">
                <page string="Weight Tracking" name="weight_tracking">
                    <group>
                        <group string="Weight Summary">
                            <field name="total_input_weight"/>
                            <field name="total_output_weight"/>
                            <field name="actual_weight_loss"/>
                            <field name="actual_weight_loss_percentage"/>
                        </group>
                        <group string="Weight Analysis">
                            <field name="expected_weight_loss"/>
                            <field name="weight_variance" decoration-danger="is_weight_variance_high"/>
                            <field name="is_weight_variance_high" invisible="1"/>
                            <div class="alert alert-warning" attrs="{'invisible': [('is_weight_variance_high', '=', False)]}">
                                <p><i class="fa fa-warning"/> Weight variance is outside acceptable range!</p>
                            </div>
                        </group>
                    </group>
                    <separator string="Component Weight Details"/>
                    <field name="weight_tracking_line_ids" readonly="1">
                        <tree>
                            <field name="product_id"/>
                            <field name="lot_id"/>
                            <field name="input_weight"/>
                            <field name="weight_contribution"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Production Tree View with Weight Info -->
    <record id="mrp_production_tree_view_weight" model="ir.ui.view">
        <field name="name">mrp.production.tree.weight</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="total_input_weight" optional="show"/>
                <field name="total_output_weight" optional="show"/>
                <field name="weight_variance" optional="show" decoration-danger="is_weight_variance_high"/>
                <field name="is_weight_variance_high" invisible="1"/>
            </field>
        </field>
    </record>
