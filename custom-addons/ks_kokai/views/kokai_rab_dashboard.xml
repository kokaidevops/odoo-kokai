    <!-- Graph View -->
    <record id="view_project_rab_graph" model="ir.ui.view">
        <field name="name">project.rab.graph</field>
        <field name="model">kokai.rab</field>
        <field name="arch" type="xml">
            <graph string="RAB Analysis" type="bar" stacked="True">
                <!-- <field name="project_id" type="row"/> -->
                <field name="total_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_project_rab_pivot" model="ir.ui.view">
        <field name="name">project.rab.pivot</field>
        <field name="model">kokai.rab</field>
        <field name="arch" type="xml">
            <pivot string="RAB Analysis">
                <!-- <field name="project_id" type="row"/> -->
                <field name="state" type="col"/>
                <field name="total_amount" type="measure"/>
                <field name="margin_amount" type="measure"/>
            </pivot>
        </field>
    </record>
