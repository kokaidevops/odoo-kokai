<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit BoM Form -->
    <record id="mrp_bom_form_view_weight" model="ir.ui.view">
        <field name="name">mrp.bom.form.weight</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[2]" position="inside">
                <group string="Weight Loss Configuration">
                    <field name="theoritical_initial_weight"/>
                    <field name="theoritical_loss_weight"/>
                    <field name="expected_weight_loss"/>
                    <field name="potential_loss_weight" />
                    <!-- <field name="weight_loss_account_id"/> -->
                </group>
            </xpath>
            
            <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_qty']" position="after">
                <field name="weight_contribution" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>