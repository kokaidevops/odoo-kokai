<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Categories -->
        <record id="module_category_project_rab" model="ir.module.category">
            <field name="name">Project RAB</field>
            <field name="description">Manage project RAB</field>
            <field name="sequence">20</field>
        </record>

        <!-- Groups -->
        <record id="group_rab_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_project_rab"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_rab_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_project_rab"/>
            <field name="implied_ids" eval="[(4, ref('group_rab_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Rules -->
        <record id="rab_user_rule" model="ir.rule">
            <field name="name">RAB User Rule</field>
            <field name="model_id" ref="model_kokai_rab"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_rab_user'))]"/>
        </record>

        <record id="rab_manager_rule" model="ir.rule">
            <field name="name">RAB Manager Rule</field>
            <field name="model_id" ref="model_kokai_rab"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_rab_manager'))]"/>
        </record>
    </data>
</odoo>