<!-- Generate MO Wizard Form View -->
<odoo>
        <data>
        <record id="generate_mo_wizard_form_view" model="ir.ui.view">
            <field name="name">generate.mo.wizard.form</field>
            <field name="model">generate.mo.wizard</field>
            <field name="arch" type="xml">
                <form string="Generate Manufacturing Orders">
                    <group>
                        <field name="sale_order_id" readonly="context.get('default_sale_order_id', False)"/>
                        <field name="generation_method" widget="radio"/>
                    </group>
                    
                    <group attrs="{'invisible': [('generation_method', '!=', 'selected')]}">
                        <field name="line_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="is_selected"/>
                                <field name="product_id" readonly="1"/>
                                <field name="quantity" readonly="1"/>
                                <field name="has_template" invisible="1"/>
                                <widget name="badge" attrs="{'invisible': [('has_template', '=', False)]}">
                                    <field name="has_template" string="Template Based"/>
                                </widget>
                            </tree>
                        </field>
                    </group>
                    
                    <footer>
                        <button string="Generate MOs" 
                                name="action_generate_mos" 
                                type="object" 
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

