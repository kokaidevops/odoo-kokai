<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="view_purchase_request_line_make_purchase_order_inherit_suppliers" model="ir.ui.view">
            <field name="name">purchase.request.line.make.purchase.order.view.form.inherit</field>
            <field name="model">purchase.request.line.make.purchase.order</field>
            <field name="inherit_id" ref="purchase_request.view_purchase_request_line_make_purchase_order"/>
            <field name="arch" type="xml">
                <field position="after" name="supplier_id">
                    <field name="batch_id" />
                    <field name="supplier_ids" widget="many2many_tags" />
                </field>
                <xpath expr="//button[@name='make_purchase_order']" position="before">
                    <button name="make_batch" string="Create Batch" type="object" class="oe_highlight"/>
                </xpath>
            </field>
        </record>
    
    </data>

</odoo>
