<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="product_template_form_view_inherit_pack" model="ir.ui.view">
            <field name="name">product.template.view.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="inside">
                    <span class="d-inline-block">
                        <field name="is_equipment"/>
                        <label for="is_equipment"/>
                    </span>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page name="equipment" string="Equipment" attrs="{'invisible': [('is_equipment', '=', False)]}">
                        <group>
                            <field name="equipment_category_id" options="{'no_create': True}" />
                            <field name="maintenance_team_id" options="{'no_create': True}" />
                            <field name="equipment_assign_to" />
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    
    </data>

</odoo>
