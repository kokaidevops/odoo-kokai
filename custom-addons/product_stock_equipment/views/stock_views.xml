<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="view_production_lot_form_inherit_equipment" model="ir.ui.view">
            <field name="name">stock.lot.view.form.inherit</field>
            <field name="model">stock.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <field name="ref" position="after">
                    <field name="equipment_id" attrs="{'readonly': True, 'invisible': [('equipment_id', '=', False)]}" />
                </field>
            </field>
        </record>

        
        <record id="view_stock_quant_tree_inventory_editable_inherit_equipment" model="ir.ui.view">
            <field name="name">stock.quant.view.list.inherit</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <button name="action_generate_equipment" groups="stock.group_stock_manager" type="object" string="Equipment" class="btn btn-link" icon="fa-building-o"/>
                </xpath>
            </field>
        </record>
    
    </data>

</odoo>
