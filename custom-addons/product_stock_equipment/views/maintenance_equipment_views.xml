<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="hr_equipment_view_form_inherit_stock" model="ir.ui.view">
            <field name="name">maintenance.equipment.view.form.inherit</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
            <field name="arch" type="xml">
                <field name="location" position="after">
                    <field name="location_id" attrs="{'readonly': True}" />
                </field>
                <field name="serial_no" position="after">
                    <field name="lot_id" attrs="{'readonly': True}" />
                </field>
                <field name="warranty_date" position="after">
                    <field name="product_id" attrs="{'readonly': True}" />
                    <field name="is_pack" />
                </field>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button attrs="{'invisible': [('is_pack', '=', False)]}" name="action_show_bundle" type="object" string="Bundle" class="oe_stat_button" icon="fa-cubes"/>
                </xpath>
            </field>
        </record>
    
    </data>

</odoo>
