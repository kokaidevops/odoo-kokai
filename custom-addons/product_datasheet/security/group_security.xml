<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
    
        <record model="ir.module.category" id="module_category_product_datasheet">
            <field name="name">Product Datasheet</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_product_datasheet_readonly" model="res.groups">
            <field name="name">User Readonly</field>
            <field name="category_id" ref="module_category_product_datasheet"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
        </record>
        <record id="group_product_datasheet_user" model="res.groups">
            <field name="name">User Full Access</field>
            <field name="category_id" ref="module_category_product_datasheet"/>
            <field name="implied_ids" eval="[(4, ref('product_datasheet.group_product_datasheet_readonly'))]" />
        </record>

        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('group_product_datasheet_readonly'))]"/>
        </record>

    </data>
</odoo>
