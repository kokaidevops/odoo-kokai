<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="product_datasheet_view_form" model="ir.ui.view">
            <field name="name">product.datasheet.view.form</field>
            <field name="model">product.datasheet</field>
            <field name="arch" type="xml">
                <form string="Datasheet">
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name" /></h1>
                        </div>
                        <group>
                            <group>
                                <field name="line_id" attrs="{'invisible': [('line_id', '=', False)]}" />
                                <field name="product_tmpl_id" />
                                <field name="product_id" readonly="1" />
                            </group>
                            <group>
                                <field name="description" />
                            </group>
                        </group>
                        <notebook>
                            <page name="variant" string="Variant">
                                <field name="variant_ids">
                                    <tree editable="bottom">
                                        <field name="sheet_id" invisible="1" />
                                        <field name="attribute_id" />
                                        <field name="value_id" />
                                        <field name="possible_value_ids" invisible="1" />
                                    </tree>
                                </field>
                            </page>
                            <page name="line" string="Other">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="sheet_id" invisible="1" />
                                        <field name="name" />
                                        <field name="value" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="product_datasheet_view_tree" model="ir.ui.view">
            <field name="name">product.datasheet.view.tree</field>
            <field name="model">product.datasheet</field>
            <field name="arch" type="xml">
                <tree string="Datasheet">
                    <field name="product_tmpl_id" />
                    <field name="product_id" />
                    <field name="date" />
                </tree>
            </field>
        </record>

        <record id="product_datasheet_action" model="ir.actions.act_window">
            <field name="name">Datasheet</field>
            <field name="res_model">product.datasheet</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

    </data>

</odoo>
