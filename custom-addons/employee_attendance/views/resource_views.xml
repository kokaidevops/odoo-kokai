<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="resource_calendar_leave_form_inherit_type" model="ir.ui.view">
            <field name="name">resource.calendar.leaves.view.form.inherit</field>
            <field name="model">resource.calendar.leaves</field>
            <field name="inherit_id" ref="resource.resource_calendar_leave_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_to']" position="after">
                    <field name="holiday" />
                    <field name="is_working_day" />
                </xpath>
            </field>
        </record>

        <record id="resource_calendar_leave_tree_inherit_type" model="ir.ui.view">
            <field name="name">resource.calendar.leaves.view.list.inherit</field>
            <field name="model">resource.calendar.leaves</field>
            <field name="inherit_id" ref="resource.resource_calendar_leave_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_to']" position="after">
                    <field name="holiday" />
                    <field name="is_working_day" />
                </xpath>
            </field>
        </record>
    
    </data>

</odoo>
