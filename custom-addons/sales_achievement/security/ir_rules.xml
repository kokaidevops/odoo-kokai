<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
    
        <record id="sales_achievement_user" model="ir.rule">
            <field name="name">User: Own Target Only</field>
            <field ref="model_sales_target" name="model_id"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="groups" eval="[(6,0,[ref('sales_achievement.group_sales_achievement_user')])]"/>
        </record>
    
        <record id="sales_achievement_manager" model="ir.rule">
            <field name="name">Manager: All Target Department</field>
            <field ref="model_sales_target" name="model_id"/>
            <field name="domain_force">[('department_id','=',user.department_id.id)]</field>
            <field name="groups" eval="[(6,0,[ref('sales_achievement.group_sales_achievement_manager')])]"/>
        </record>
    
        <record id="sales_achievement_administrator" model="ir.rule">
            <field name="name">Administrator</field>
            <field ref="model_sales_target" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(6,0,[ref('sales_achievement.group_sales_achievement_administrator')])]"/>
        </record>
    
    </data>

</odoo>
