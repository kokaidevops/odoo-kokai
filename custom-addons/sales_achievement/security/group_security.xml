<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
    
        <record model="ir.module.category" id="module_category_sales_target">
            <field name="name">Salesperson Target</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_sales_achievement_user" model="res.groups">
            <field name="name">User: Own Target Only</field>
            <field name="category_id" ref="module_category_sales_target" />
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_sales_achievement_manager" model="res.groups">
            <field name="name">Manager: All Target Department</field>
            <field name="category_id" ref="module_category_sales_target" />
            <field name="implied_ids" eval="[(4, ref('sales_achievement.group_sales_achievement_user'))]" />
        </record>

        <record id="group_sales_achievement_administrator" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_sales_target" />
            <field name="implied_ids" eval="[(4, ref('sales_achievement.group_sales_achievement_manager'))]" />
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('group_sales_achievement_user'))]"/>
        </record>
    
    </data>

</odoo>