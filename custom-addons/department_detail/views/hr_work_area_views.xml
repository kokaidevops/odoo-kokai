<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>


        <record id="hr_work_area_view_tree" model="ir.ui.view">
            <field name="name">hr.work.area.view.tree</field>
            <field name="model">hr.work.area</field>
            <field name="arch" type="xml">
                <tree string="Work Area">
                    <field name="display_name" />
                    <field name="categ_id" />
                    <field name="parent_id" />
                </tree>
            </field>
        </record>

        <record id="hr_work_area_view_form" model="ir.ui.view">
            <field name="name">hr.work.area.view.form</field>
            <field name="model">hr.work.area</field>
            <field name="arch" type="xml">
                <form string="Work Area">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_show_child_ids" type="object" class="oe_stat_button" icon="fa-sitemap" string="Child Area" />
                        </div>
                        <div class="oe_title">
                            <h1><field name="name" /></h1>
                        </div>
                        <group>
                            <group>
                                <field name="location_id" />
                                <field name="categ_id" options="{'no_create': True, 'no_open': True}" />
                                <field name="parent_id" />
                            </group>
                            <group>
                                <field name="used_by" />
                                <field name="employee_ids" widget="many2many_tags" attrs="{'invisible': [('used_by', '!=', 'employee')]}" />
                                <field name="department_ids" widget="many2many_tags" attrs="{'invisible': [('used_by', '!=', 'department')]}" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="hr_work_area_action" model="ir.actions.act_window">
            <field name="name">Work Area</field>
            <field name="res_model">hr.work.area</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'search_default_location': 1, 'search_default_group_categ': 1}</field>
        </record>

        <record id="hr_work_area_view_search" model="ir.ui.view">
            <field name="name">hr.work.area.view.search</field>
            <field name="model">hr.work.area</field>
            <field name="arch" type="xml">
                <search string="Work Area">
                    <field name="name" string="Name" filter_domain="[('name', 'ilike', self)]" />
                    <field name="categ_id" filter_domain="[('categ_id', 'child_of', raw_value)]"/>
                    <group string="Group By" expand="1">
                        <filter name="location" string="Location" context="{'group_by': 'location_id'}" />
                        <filter name="group_categ" string="Area Category" context="{'group_by': 'categ_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <menuitem
            id="hr_work_area_menu"
            name="Work Area"
            action="hr_work_area_action"
            parent="hr.menu_config_employee"
            sequence="10"
        />


        <record id="work_area_category_view_form" model="ir.ui.view">
            <field name="name">work.area.category.view.form</field>
            <field name="model">work.area.category</field>
            <field name="arch" type="xml">
                <form string="Area Categories">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button 
                                name="%(hr_work_area_action)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-th-list"
                                context="{'search_default_categ_id': active_id, 'default_categ_id': active_id, 'group_expand': True}"
                            >
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value"><field name="area_count"/></span>
                                    <span class="o_stat_text"> Areas</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" string="Category"/>
                            <h1><field name="name" placeholder="e.g. Employee Area" /></h1>
                        </div>
                        <group>
                            <group>
                                <field name="parent_id" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="work_area_category_view_tree" model="ir.ui.view">
            <field name="name">work.area.category.view.tree</field>
            <field name="model">work.area.category</field>
            <field name="arch" type="xml">
                <tree string="Area Categories">
                    <field name="display_name" string="Area Category" />
                </tree>
            </field>
        </record>

        <record id="work_area_category_view_search" model="ir.ui.view">
            <field name="name">work.area.category.view.search</field>
            <field name="model">work.area.category</field>
            <field name="arch" type="xml">
                <search string="Area Categories">
                    <field name="name" string="Area Categories" />
                    <field name="parent_id" />
                </search>
            </field>
        </record>

        <record id="work_area_category_action" model="ir.actions.act_window">
            <field name="name">Area Categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">work.area.category</field>
            <field name="search_view_id" ref="work_area_category_view_search"/>
            <field name="view_id" ref="work_area_category_view_tree"/>
        </record>

        <menuitem
            id="work_area_category_menu"
            name="Area Categories"
            action="work_area_category_action"
            parent="hr.menu_config_employee"
            sequence="10"
        />

        <record id="hr_work_location_form_view_inherit_area" model="ir.ui.view">
            <field name="name">hr.work.location.view.form.inherit</field>
            <field name="model">hr.work.location</field>
            <field name="inherit_id" ref="hr.hr_work_location_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet//group[1]" position="before">
                    <div class="oe_button_box" name="button_box">
                        <button name="action_show_work_area" type="object" class="oe_stat_button" icon="fa-sitemap">
                            <field name="area_count" string="Area" widget="statinfo"/>
                        </button>
                    </div>
                </xpath>
            </field>
        </record>
    
    </data>

</odoo>
