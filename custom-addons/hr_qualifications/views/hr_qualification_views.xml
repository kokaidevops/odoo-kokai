<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <data>

        <menuitem
            id="qualification_menu"
            name="Qualification"
            groups="hr.group_hr_user"
            parent="hr.menu_human_resources_configuration"
            sequence="100"
        />


        <record id="hr_qualification_type_view_form" model="ir.ui.view">
            <field name="name">hr.qualification.type.view.form</field>
            <field name="model">hr.qualification.type</field>
            <field name="arch" type="xml">
                <form string="Qualification Type">
                    <field name="id" invisible="1"/>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Qualification Type"/>
                            <h1>
                                <field name="name" placeholder="e.g. Education" required="True"/>
                            </h1>
                        </div>
                        <group string="Levels">
                        </group>
                        <field name="level_ids" nolabel="1" context="{'default_type_id': id}">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle" />
                                <field name="type_id" invisible="1" />
                                <field name="name" />
                                <field name="description" />
                                <field name="default_level" />
                                <button string="Set Default" name="action_set_default" type="object"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_qualification_type_view_tree" model="ir.ui.view">
            <field name="name">hr.qualification.type.view.tree</field>
            <field name="model">hr.qualification.type</field>
            <field name="arch" type="xml">
                <tree string="Qualification Type">
                    <field name="active" invisible="1" />
                    <field name="sequence" widget="handle" />
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="hr_qualification_type_action" model="ir.actions.act_window">
            <field name="name">Type</field>
            <field name="res_model">hr.qualification.type</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
            id="qualification_type_menu"
            name="Type"
            action="hr_qualification_type_action"
            parent="qualification_menu"
            sequence="10"
        />


        <record id="view_hr_job_form_inherit_qualification" model="ir.ui.view">
            <field name="name">hr.job.view.form.inherit</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="qualification_page" string="Qualification">
                        <field name="qualification_line_ids">
                            <tree editable="bottom">
                                <field name="job_id" invisible="1" />
                                <field name="type_id" />
                                <field name="level_id" />
                                <field name="description" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>


        <record id="view_employee_form_inherit_qualification" model="ir.ui.view">
            <field name="name">hr.employee.view.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="qualification_page" string="Qualifications">
                        <field name="qualification_line_ids">
                            <tree editable="bottom">
                                <field name="job_id" invisible="1" />
                                <field name="type_id" />
                                <field name="level_id" />
                                <field name="description" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        
    
    </data>

</odoo>