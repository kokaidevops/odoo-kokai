<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
    
        <record model="ir.module.category" id="module_category_hr_overtime">
            <field name="name">Overtime Request</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_hr_overtime_user" model="res.groups">
            <field name="name">User: Own Documents Only</field>
            <field name="category_id" ref="module_category_hr_overtime" />
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_hr_overtime_manager" model="res.groups">
            <field name="name">Manager: Own Departments Only</field>
            <field name="category_id" ref="module_category_hr_overtime" />
            <field name="implied_ids" eval="[(4, ref('hr_overtime.group_hr_overtime_user'))]" />
        </record>

        <record id="group_hr_overtime_administrator" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_hr_overtime" />
            <field name="implied_ids" eval="[(4, ref('hr_overtime.group_hr_overtime_manager'))]" />
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('group_hr_overtime_administrator'))]"/>
        </record>
    
    </data>

</odoo>