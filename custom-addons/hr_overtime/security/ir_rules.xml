<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
    
        <record id="hr_overtime_user" model="ir.rule">
            <field name="name">User: Own Documents Only</field>
            <field ref="model_hr_overtime" name="model_id"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="groups" eval="[(6,0,[ref('hr_overtime.group_hr_overtime_user')])]"/>
        </record>
    
        <record id="hr_overtime_manager" model="ir.rule">
            <field name="name">Manager: Own Departments Only</field>
            <field ref="model_hr_overtime" name="model_id"/>
            <field name="domain_force">[('department_id','=',user.department_id.id)]</field>
            <field name="groups" eval="[(6,0,[ref('hr_overtime.group_hr_overtime_manager')])]"/>
        </record>
    
        <record id="hr_overtime_administrator" model="ir.rule">
            <field name="name">All Request</field>
            <field ref="model_hr_overtime" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(6,0,[ref('hr_overtime.group_hr_overtime_administrator')])]"/>
        </record>
    
    </data>

</odoo>
