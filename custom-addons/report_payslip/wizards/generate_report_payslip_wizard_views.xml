<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="generate_report_payslip_wizard_view_form" model="ir.ui.view">
            <field name="name">generate.report.payslip.wizard.view.form</field>
            <field name="model">generate.report.payslip.wizard</field>
            <field name="arch" type="xml">
                <form string="Generate Report Payslip">
                    <sheet>
                        <group>
                            <field name="payslip_run_id" readonly="1" />
                            <field name="type" />
                        </group>
                    </sheet>
                    <footer>
                        <button string="Generate" name="action_generate" data-hotkey="g" type="object" class="oe_highlight"/>
                        <button string="Cancel" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="generate_report_payslip_wizard_action" model="ir.actions.act_window">
            <field name="name">Generate Report Payslip</field>
            <field name="res_model">generate.report.payslip.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    
    </data>

</odoo>
