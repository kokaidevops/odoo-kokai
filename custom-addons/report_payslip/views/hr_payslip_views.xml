<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="view_hr_payslip_form_inherit_report_slip" model="ir.ui.view">
            <field name="name">hr.payslip.view.form.inherit</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button string="Salary Slip" name="action_print_salary_slip" type="object" class="oe_highlight" states="paid" />
                </xpath>
            </field>
        </record>

        
        <record id="hr_payslip_run_form_inherit_report" model="ir.ui.view">
            <field name="name">hr.payslip.run.view.form.inherit</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button string="Generate Report" name="generate_report" type="object" />
                </xpath>
            </field>
        </record>
    
    </data>

</odoo>
