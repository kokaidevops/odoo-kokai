<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
    
        <record id="module_category_hr_work_area" model="ir.module.category">
            <field name="name">Work Area</field>
        </record>

        <record id="group_hr_work_area_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_hr_work_area" />
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        <record id="group_hr_work_area_administrator" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_hr_work_area" />
            <field name="implied_ids" eval="[(4, ref('department_detail.group_hr_work_area_user'))]" />
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="hr_work_area_user" model="ir.rule">
            <field name="name">User</field>
            <field ref="model_hr_work_area" name="model_id"/>
            <field name="domain_force">['|', '|', ('used_by','=','all'), ('employee_ids', 'in', user.employee_id.id), ('department_ids', 'in', user.department_id.id)]</field>
            <field name="groups" eval="[(6,0,[ref('department_detail.group_hr_work_area_user')])]"/>
        </record>
        <record id="hr_work_area_administrator" model="ir.rule">
            <field name="name">Administrator</field>
            <field ref="model_hr_work_area" name="model_id"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(6,0,[ref('department_detail.group_hr_work_area_administrator')])]"/>
        </record>

    </data>

</odoo>
