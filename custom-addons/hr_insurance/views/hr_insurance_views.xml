<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="hr_insurance_view_form" model="ir.ui.view">
            <field name="name">hr.insurance.view.form</field>
            <field name="model">hr.insurance</field>
            <field name="arch" type="xml">
                <form string="Insurance">
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name" /></h1>
                        </div>
                        <group>
                            <group>
                                <field name="code" />
                            </group>
                            <group>
                                <field name="active" invisible="1" />
                                <field name="borne_by" />
                                <field name="insurance_type" />
                                <field name="rate" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_insurance_view_tree" model="ir.ui.view">
            <field name="name">hr.insurance.view.tree</field>
            <field name="model">hr.insurance</field>
            <field name="arch" type="xml">
                <tree string="Insurance">
                    <field name="sequence" widget="handle" />
                    <field name="name" />
                    <field name="code" />
                    <field name="borne_by" />
                    <field name="insurance_type" />
                    <field name="rate" />
                    <field name="active" widget="boolean_toggle" />
                </tree>
            </field>
        </record>

        <record id="hr_insurance_action" model="ir.actions.act_window">
            <field name="name">Insurance</field>
            <field name="res_model">hr.insurance</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
            id="hr_insurance_menu"
            name="Insurance"
            action="hr_insurance_action"
            parent="hr_payroll.menu_hr_salary_configuration"
            sequence="10"
        />


        <record id="hr_contract_view_form_inherit_insurance" model="ir.ui.view">
            <field name="name">hr.contract.view.form.inherit</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='information']" position="after">
                    <page name="insurance" string="Insurance">
                        <field name="insurance_ids" context="{'default_contract_id': active_id}">
                            <tree editable="bottom">
                                <field name="contract_id" invisible="1" />
                                <field name="insurance_id" options="{'no_create': True, 'no_open': True}" />
                                <field name="amount_type" />
                                <field name="amount_fixed" attrs="{'readonly': [('amount_type', '=', 'code')]}" />
                                <field name="rate" attrs="{'readonly': [('amount_type', '=', 'fixed')]}" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>


        <record id="view_hr_payslip_form_inherit_insurance" model="ir.ui.view">
            <field name="name">hr.payslip.view.form.inherit</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='account_info']//group//group[1]" position="inside">
                    <field name="calculate_insurance" widget="boolean_toggle" />
                </xpath>
            </field>
        </record>
    
    </data>

</odoo>
