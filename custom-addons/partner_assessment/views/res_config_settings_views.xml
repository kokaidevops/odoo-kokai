<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="res_config_settings_approval_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="approvals_settings.res_config_settings_approval"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='approval_setting_container']" position="after">
                    <div class="col-12 col-lg-6 o_setting_box" title="Settings for Partner Assessment">
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="partner_assessment_approval_id" class="col-lg-3"/>
                                    <field name="partner_assessment_approval_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    
    </data>

</odoo>
