<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="planning_view_form_inherit_custom" model="ir.ui.view">
            <field name="name">planning.slot.view.form.inherit</field>
            <field name="model">planning.slot</field>
            <field name="inherit_id" ref="planning.planning_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    
                </xpath>
                <xpath expr="//group" position="inside">
                    <group>
                        <field name="activity_id" />
                        <field name="area_id" />
                        <field name="responsible_id" />
                        <field name="has_running" invisible="1" />
                    </group>
                </xpath>
                <xpath expr="//form" position="inside">
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </xpath>
            </field>
        </record>
    
    </data>

</odoo>
