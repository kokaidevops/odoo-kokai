<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="view_employee_form_inherit_document_expiry" model="ir.ui.view">
            <field name="name">hr.employee.view.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_show_document_expiry" class="oe_stat_button" icon="fa-file-text" type="object">
                        <field name="document_expiry_count" widget="statinfo" string="Documents"/>
                    </button>
                </xpath>
            </field>
        </record>


        <record id="hr_employee_view_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.view.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="documents_hr.hr_employee_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_open_documents']" position="attributes">
                    <attribute name="invisible" value="1">1</attribute>
                </xpath>
            </field>
        </record>
    
    </data>

</odoo>
