<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="res_config_settings_approval_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="approvals_settings.res_config_settings_approval"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='approval_setting_container']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" title="Settings for Recruitment">
                        <div class="o_setting_right_pane">
                            <field name="recruitment_request_approval_id"/>
                            <div class="text-muted">
                                Approval Type for Recruitment Request
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    
    </data>

</odoo>
