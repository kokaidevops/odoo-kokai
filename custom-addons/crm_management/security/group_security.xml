<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
    
        <record id="crm_management.access_price_so" model="res.groups">
            <field name="name">Access Price SO</field>
            <field name="comment">Can see Price in Sale Order</field>
        </record>

        <record id="user_access_price_so" model="ir.rule">
            <field name="name">Access Price SO</field>
            <field ref="model_sale_order_line" name="model_id"/>
            <field name="domain_force">[(True, '=', True)]</field>
            <field name="groups" eval="[(4,ref('crm_management.access_price_so'))]"/>
        </record>


        <record id="crm_management.access_previous_stage" model="res.groups">
            <field name="name">Access Previous Stage</field>
            <field name="comment">Can return to the Previous Stage </field>
        </record>

        <record id="user_access_previous_stage" model="ir.rule">
            <field name="name">Access Previous Stage</field>
            <field ref="model_crm_lead" name="model_id"/>
            <field name="domain_force">[(True, '=', True)]</field>
            <field name="groups" eval="[(4,ref('crm_management.access_previous_stage'))]"/>
        </record>

    </data>

</odoo>
