<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="maintenance_service_view_form" model="ir.ui.view">
            <field name="name">maintenance.service.view.form</field>
            <field name="model">maintenance.service</field>
            <field name="arch" type="xml">
                <form string="Service">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="impact" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="maintenance_service_view_tree" model="ir.ui.view">
            <field name="name">maintenance.service.view.tree</field>
            <field name="model">maintenance.service</field>
            <field name="arch" type="xml">
                <tree string="Service" editable="bottom">
                    <field name="name" />
                    <field name="impact" />
                </tree>
            </field>
        </record>

        <record id="maintenance_service_action" model="ir.actions.act_window">
            <field name="name">Service</field>
            <field name="res_model">maintenance.service</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
            id="maintenance_service_menu"
            name="Service"
            action="maintenance_service_action"
            parent="maintenance.menu_maintenance_configuration"
            sequence="10"
        />


        <menuitem
            id="building_root_menu"
            name="Building"
            parent="maintenance.menu_maintenance_title"
            sequence="3"
        />


        <record id="hr_work_area_view_form_inherit_equipment" model="ir.ui.view">
            <field name="name">hr.work.area.view.form.inherit</field>
            <field name="model">hr.work.area</field>
            <field name="inherit_id" ref="department_detail.hr_work_area_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="equipment" string="MEP">
                        <field name="equipment_ids">
                            <tree 
                                editable="bottom"
                                decoration-info="state == 'good'"
                                decoration-warning="state == 'maintenance'"
                                decoration-danger="state == 'bad'"
                            >
                                <field name="area_id" invisible="1" />
                                <field name="is_broken" invisible="1" />
                                <field name="equipment_id" />
                                <field name="qty" />
                                <field name="state" />
                                <button 
                                    name="%(maintenance.hr_equipment_request_action)d" 
                                    type="action" 
                                    icon="fa-wrench" 
                                    title="Request Maintenance" 
                                    width="0.1" 
                                    options="{&quot;warn&quot;: true}"
                                    context="{
                                        'search_default_equipment_id': equipment_id, 
                                        'default_equipment_id': equipment_id,  
                                        'default_work_area_id': parent.id, 
                                        'default_area_equipment_id': id, 
                                        'default_can_edit': False, 
                                        'group_expand': True,
                                    }"
                                />
                                <button name="request_maintenance" type="object" icon="fa-exclamation-triangle" string="Report Malfunction" class="btn-danger"/>
                            </tree>
                        </field>
                    </page>
                    <page name="structure" string="Building Maintenance">
                        <field name="structure_ids">
                            <tree 
                                editable="bottom"
                                decoration-info="state == 'good'"
                                decoration-warning="state == 'maintenance'"
                                decoration-danger="state == 'bad'"
                            >
                                <field name="area_id" invisible="1" />
                                <field name="is_broken" invisible="1" />
                                <field name="structure_id" />
                                <field name="state" />
                                <button 
                                    name="%(maintenance.hr_equipment_request_action)d" 
                                    type="action" 
                                    icon="fa-wrench" 
                                    title="Request Maintenance" 
                                    width="0.1" 
                                    options="{&quot;warn&quot;: true}"
                                    context="{
                                        'search_default_structure_id': structure_id, 
                                        'search_default_work_area_id': parent.id, 
                                        'search_default_area_structure_id': id, 
                                        'default_structure_id': structure_id, 
                                        'default_work_area_id': parent.id, 
                                        'default_area_structure_id': id, 
                                        'default_can_edit': False, 
                                        'group_expand': True,
                                    }"
                                />
                                <button name="request_maintenance" type="object" icon="fa-exclamation-triangle" string="Report Malfunction" class="btn-danger"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>


        <record id="building_structure_view_tree" model="ir.ui.view">
            <field name="name">building.structure.view.tree</field>
            <field name="model">building.structure</field>
            <field name="arch" type="xml">
                <tree string="Structure" editable="bottom">
                    <field name="sequence" widget="handle" />
                    <field name="name" />
                    <field name="maintenance_team_id" optional="show" />
                    <field name="category_id" optional="hide" />
                </tree>
            </field>
        </record>

        <record id="building_structure_action" model="ir.actions.act_window">
            <field name="name">Structure</field>
            <field name="res_model">building.structure</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
            id="hr_work_area_menu"
            name="Work Area"
            action="department_detail.hr_work_area_action"
            parent="building_maintenance.building_root_menu"
            sequence="10"
        />

        <menuitem
            id="work_area_category_menu"
            name="Area Category"
            action="department_detail.work_area_category_action"
            parent="building_maintenance.building_root_menu"
            sequence="20"
        />

        <menuitem
            id="building_structure_menu"
            name="Structure"
            action="building_structure_action"
            parent="building_maintenance.building_root_menu"
            sequence="30"
        />


        <record id="hr_equipment_request_view_search_inherit_building" model="ir.ui.view">
            <field name="name">maintenance.request.view.search.inherit</field>
            <field name="model">maintenance.request</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_request_view_search"/>
            <field name="arch" type="xml">
                <field name="equipment_id" position="after">
                    <field name="structure_id" />
                </field>
            </field>
        </record>
    
    </data>

</odoo>
