<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="res_config_settings_view_form_inherit_activity_revision" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='app_settings_block']" position="inside">
                    <div id="mail_activity">
                        <h2>Default Activity Type</h2>
                        <div class="row mt16 o_settings_container" name="users_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="mail_activity_setting">
                                <div class="o_setting_right_pane">
                                    <field name="activity_revision_id"/>
                                    <div class="text-muted">
                                        Activity Type for revision
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    
    </data>

</odoo>
