<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
        
        <record id="mail_act_notification" model="mail.activity.type">
            <field name="name">Notification</field>
            <field name="icon">fa-bell-o</field>
        </record>
        <record id="mail_act_revision" model="mail.activity.type">
            <field name="name">Revision</field>
            <field name="icon">fa-pencil-square-o</field>
        </record>

        <record id="seq_assignment_activity" model="ir.sequence">
            <field name="name">Assignment Activity</field>
            <field name="code">assignment.activity</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
            <field name="number_next">1</field>
            <field name="use_date_range">1</field>
            <field name="range_reset">monthly</field>
            <field name="prefix">ASS-ACT/%(year)s/%(month)s/</field>
        </record>
    
    </data>

</odoo>
