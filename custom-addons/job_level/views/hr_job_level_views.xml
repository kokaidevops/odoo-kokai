<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="hr_job_level_view_tree" model="ir.ui.view">
            <field name="name">hr.job.level.view.tree</field>
            <field name="model">hr.job.level</field>
            <field name="arch" type="xml">
                <tree string="Job Level" editable="bottom">
                    <field name="sequence" widget="handle" />
                    <field name="active" invisible="1" />
                    <field name="name" required="1" />
                </tree>
            </field>
        </record>

        <record id="hr_job_level_action" model="ir.actions.act_window">
            <field name="name">Job Level</field>
            <field name="res_model">hr.job.level</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
            id="hr_job_level_menu"
            name="Job Level"
            action="hr_job_level_action"
            parent="hr.menu_config_recruitment"
            sequence="10"
        />


        <record id="view_employee_form_inherit_job_level" model="ir.ui.view">
            <field name="name">hr.employee.view.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <field name="job_id" position="after">
                    <field name="job_level_id" />
                </field>
            </field>
        </record>


        <record id="hr_contract_view_form_inherit_job_level" model="ir.ui.view">
            <field name="name">hr.contract.view.form.inherit</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <field name="job_id" position="after">
                    <field name="job_level_id" />
                </field>
            </field>
        </record>
    
    </data>

</odoo>
