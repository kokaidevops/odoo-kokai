<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>


        <menuitem
            id="fingerprint_root_menu"
            name="Device"
            parent="hr.menu_human_resources_configuration"
            sequence="100"
        />
    
        <record id="fingerprint_device_view_form" model="ir.ui.view">
            <field name="name">fingerprint.device.view.form</field>
            <field name="model">fingerprint.device</field>
            <field name="arch" type="xml">
                <form string="Device">
                    <header>
                        <button string="Test Connect" name="test_connection" type="object" class="oe_highlight"/>
                        <button string="Attendance" name="get_attendance" type="object" class="oe_highlight"/>
                        <button string="Extract Data" name="process_data_from_fingerprint" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <group>
                            <field name="ip_address" placeholder="10.144.74.71" required = "True"/>
                            <field name="port" required = "True"/>
                            <field name="device_password"  password="True" />
                            <field name="sequence"/>
                            <field name="difference" required = "True"/>
                        </group>
                    </sheet>

                    <div class="alert alert-success alert-dismissible" invisible="not context.get('show_message1',False)">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">X</a>
                        <strong>Success!</strong> Device Connected Successfully
                    </div>
                </form>
            </field>
        </record>

        <record id="fingerprint_device_view_tree" model="ir.ui.view">
            <field name="name">fingerprint.device.view.tree</field>
            <field name="model">fingerprint.device</field>
            <field name="arch" type="xml">
                <tree string="Devices">
                    <field name="name" />
                    <field name="ip_address" />
                    <field name="port" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="fingerprint_device_action" model="ir.actions.act_window">
            <field name="name">Device</field>
            <field name="res_model">fingerprint.device</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
            id="fingerprint_device_menu"
            name="Device"
            action="fingerprint_device_action"
            parent="fingerprint_root_menu"
            sequence="10"
        />


        <record id="hr_employee_fingerprint_view_tree" model="ir.ui.view">
            <field name="name">hr.employee.fingerprint.view.tree</field>
            <field name="model">hr.employee.fingerprint</field>
            <field name="arch" type="xml">
                <tree string="Employee Fingerprint">
                    <field name="employee_id" />
                    <field name="pin" />
                </tree>
            </field>
        </record>

        <record id="hr_employee_fingerprint_action" model="ir.actions.act_window">
            <field name="name">Employee Fingerprint</field>
            <field name="res_model">hr.employee.fingerprint</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
            id="hr_employee_fingerprint_menu"
            name="Employee Fingerprint"
            action="hr_employee_fingerprint_action"
            parent="fingerprint_root_menu"
            sequence="10"
        />
    
    </data>

</odoo>
