<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="import_employee_fingerprint_view_form" model="ir.ui.view">
            <field name="name">import.employee.fingerprint.view.form</field>
            <field name="model">import.employee.fingerprint</field>
            <field name="arch" type="xml">
                <form string="Import Employee Fingerprint">
                    <sheet>
                        <group>
                            <field name="file" />
                        </group>
                    </sheet>
                    <footer>
                        <button string="Import" type="object" name="action_import" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="import_employee_fingerprint_action" model="ir.actions.act_window">
            <field name="name">Import Employee Fingerprint</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">import.employee.fingerprint</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
            id="import_employee_fingerprint_menu"
            name="Import Employee Fingerprint"
            action="import_employee_fingerprint_action"
            parent="fingerprint_root_menu"
            sequence="10"
        />
    
    </data>

</odoo>
