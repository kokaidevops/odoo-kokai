<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="device_extract_wizard_view_form" model="ir.ui.view">
            <field name="name">device.extract.wizard.view.form</field>
            <field name="model">device.extract.wizard</field>
            <field name="arch" type="xml">
                <form string="Process Data">
                    <sheet>
                        <group>
                            <group>
                                <field name="device_id" />
                                <field name="file" />
                            </group>
                            <group>
                                <field name="start_date" />
                                <field name="end_date" />
                            </group>
                        </group>
                        <footer>
                            <button string="Import" name="action_import" type="object" class="oe_highlight"/>
                            <button string="Get Extract" name="action_process" type="object" class="oe_highlight"/>
                            <button string="Cancel" special="cancel" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    
    </data>

</odoo>
