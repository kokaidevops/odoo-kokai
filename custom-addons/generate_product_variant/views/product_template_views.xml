<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="product_template_generate_product_variant_action_server" model="ir.actions.server">
            <field name="name">Generate Product Variant</field>
            <field name="model_id" ref="model_product_template"/>
            <field name="binding_model_id" ref="model_product_template"/>
            <field name="state">code</field>
            <field name="code">
                for record in records:
                    record.generate_product_variant()
            </field>
        </record>

        <record id="product_template_form_view_inherit_generate" model="ir.ui.view">
            <field name="name">product.template.view.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button string="Generate" type="object" name="action_show_wizard_generate_product"/>
                </xpath>
            </field>
        </record>
    
    </data>
    

</odoo>
