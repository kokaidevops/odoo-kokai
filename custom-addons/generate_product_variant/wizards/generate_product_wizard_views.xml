<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="generate_product_wizard_view_form" model="ir.ui.view">
            <field name="name">generate.product.wizard.view.form</field>
            <field name="model">generate.product.wizard</field>
            <field name="arch" type="xml">
                <form string="Generate Product">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="suggested_name" />
                            <field name="product_id" attrs="{'readonly': True, 'invisible': [('product_id', '=', False)]}" />
                            <field name="product_tmpl_id" attrs="{'readonly': [('product_id', '!=', False)]}" />
                            <field name="code" readonly="1" />
                        </group>
                        <notebook>
                            <page name="variant" string="Variant">
                                <field name="variant_ids">
                                    <tree editable="bottom">
                                        <field name="wizard_id" readonly="1" invisible="1" />
                                        <field name="attribute_id" />
                                        <field name="value_id" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button string="Generate" name="generate_product" type="object" class="oe_highlight"/>
                        <button string="Cancel" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="generate_product_wizard_action" model="ir.actions.act_window">
            <field name="name">Generate Product</field>
            <field name="res_model">generate.product.wizard</field>
            <field name="view_mode">form</field>
        </record>
    
    </data>

</odoo>
