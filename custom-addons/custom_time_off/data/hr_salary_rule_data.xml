<odoo>
    <data>

        <record id="hr_salary_rule_pto_payout_2" model="hr.salary.rule">
            <field name="name">PTO Payout</field>
            <field name="code">PTOP</field>
            <field name="sequence" eval="130"/>
            <field name="category_id" ref="custom_payroll.hr_salary_rule_category_data_ind"/>
            <field name="condition_select">python</field>
            <field name="condition_python">result = inputs.PTO_PAYOUT</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">
result = inputs.PTO_PAYOUT.amount
result_name = inputs.PTO_PAYOUT.name
            </field>
            <field name="struct_id" ref="custom_payroll.hr_payroll_structure_data_kokai_office_pay" />
        </record>
        <record id="hr_salary_rule_attendance_deduction_2" model="hr.salary.rule">
            <field name="name">Attendance Deduction</field>
            <field name="code">ATT_DED</field>
            <field name="sequence" eval="255"/>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="condition_select">python</field>
            <field name="condition_python">result = payslip.calculate_leave and payslip.time_off_ids</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">
leaving_days = 0
for leave in payslip.time_off_ids:
    if leave.holiday_status_id.id in payslip.holiday_status_ids.ids:
        leaving_days += leave.actual_days
result = contract.wage/21*leaving_days
result_name = 'Attendance Deduction'
            </field>
            <field name="struct_id" ref="custom_payroll.hr_payroll_structure_data_kokai_office_pay" />
        </record>


