<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="hr_allowance_view_tree" model="ir.ui.view">
            <field name="name">hr.allowance.view.tree</field>
            <field name="model">hr.allowance</field>
            <field name="arch" type="xml">
                <tree string="Allowance" editable="bottom">
                    <field name="sequence" widget="handle" />
                    <field name="active" invisible="1" />
                    <field name="name" />
                    <field name="code" />
                </tree>
            </field>
        </record>

        <record id="hr_allowance_action" model="ir.actions.act_window">
            <field name="name">Allowance</field>
            <field name="res_model">hr.allowance</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
            id="hr_allowance_menu"
            name="Allowance"
            action="hr_allowance_action"
            parent="hr_payroll.menu_hr_salary_configuration"
            sequence="10"
        />


        <record id="hr_minimum_wage_view_tree" model="ir.ui.view">
            <field name="name">hr.minimum.wage.view.tree</field>
            <field name="model">hr.minimum.wage</field>
            <field name="arch" type="xml">
                <tree string="Minimum Wage" editable="bottom">
                    <field name="active" invisible="1" />
                    <field name="company_id" optional="hide" />
                    <field name="currency_id" optional="hide" />
                    <field name="country_id" optional="hide" />
                    <field name="state_id" />
                    <field name="city_id" />
                    <field name="name" />
                    <field name="value" />
                </tree>
            </field>
        </record>

        <record id="hr_minimum_wage_action" model="ir.actions.act_window">
            <field name="name">Minimum Wage</field>
            <field name="res_model">hr.minimum.wage</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
            id="hr_minimum_wage_menu"
            name="Minimum Wage"
            action="hr_minimum_wage_action"
            parent="hr_payroll.menu_hr_salary_configuration"
            sequence="10"
        />


        <record id="hr_contract_view_form_inherit_allowance" model="ir.ui.view">
            <field name="name">hr.contract.view.form.inherit</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='contract_details']" position="inside">
                    <field name="tin" />
                    <field name="employee_shift_id" />
                </xpath>
                <xpath expr="//group[@name='salary_info']" position="inside">
                    <group>
                        <field name="minimum_wage_id" />
                    </group>
                </xpath>
                <xpath expr="//label[@for='wage']" position="before">
                    <field name="basic_salary" attrs="{'invisible': [('wage_type', '=', 'hourly')]}" />
                </xpath>
                <xpath expr="//page[@name='information']" position="after">
                    <page name="allowance" string="Allowance">
                        <field name="allowance_ids" context="{'default_contract_id': active_id}">
                            <tree editable="bottom">
                                <field name="contract_id" invisible="1" />
                                <field name="allowance_id" options="{'no_create': True, 'no_open': True}" />
                                <field name="value" widget="monetary" />
                            </tree>
                        </field>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                <field name="total_allowance" readonly="1" />
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>


        <record id="view_employee_form_inherit_contract_type" model="ir.ui.view">
            <field name="name">hr.employee.view.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <field name="parent_id" position="before">
                    <field name="contract_type_id" />
                </field>
            </field>
        </record>


        <record id="view_hr_payslip_form_inherit_merge_payslip" model="ir.ui.view">
            <field name="name">hr.payslip.view.form.inherit</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='account_info']//group" position="inside">
                    <group>
                        <field name="merge_payslip" />
                        <field name="payslip_ids" attrs="{'invisible': [('merge_payslip', '=', False)]}" widget="many2many_tags" />
                    </group>
                </xpath>
                <xpath expr="//page[@name='account_info']//group//group[1]" position="inside">
                    <field name="calculate_tax" widget="boolean_toggle" />
                </xpath>
            </field>
        </record>


        <record id="hr_contract_history_view_list_inherit_date_end" model="ir.ui.view">
            <field name="name">hr.contract.history.view.list.inherit</field>
            <field name="model">hr.contract.history</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_history_view_list"/>
            <field name="arch" type="xml">
                <xpath expr="//tree//field[@name='date_start']" position="after">
                    <field name="date_end" />
                </xpath>
            </field>
        </record>


        <record id="view_employee_tree_inherit_custom" model="ir.ui.view">
            <field name="name">hr.employee.view.list.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <field name="registration_number" optional="hide" />
                </xpath>
            </field>
        </record>
    
    </data>

</odoo>
