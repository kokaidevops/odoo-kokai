<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="base_document_view_form_inherit_fleet" model="ir.ui.view">
            <field name="name">base.document.view.form.inherit</field>
            <field name="model">base.document</field>
            <field name="inherit_id" ref="document_expiry.base_document_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='owner']" position="inside">
                    <field name="fleet_id" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('based_on', '!=', 'fleet')]}" />
                </xpath>
            </field>
        </record>
    
    </data>

</odoo>
