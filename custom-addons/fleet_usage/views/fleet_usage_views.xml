<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="fleet_usage_view_form" model="ir.ui.view">
            <field name="name">fleet.usage.view.form</field>
            <field name="model">fleet.usage</field>
            <field name="arch" type="xml">
                <form string="Fleet Usage">
                    <header>
                        <button string="Draft" states="cancel" name="action_draft" type="object"/>
                        <button string="Request Approval" name="action_requested" states="draft" type="object" class="oe_highlight"/>
                        <button string="Cancel" states="draft" name="action_cancel" type="object"/>
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" />
                            </h1>
                        </div>
                        <group>
                            <field name="position" required="1" />
                            <field name="date" />
                            <field name="fleet_id" />
                            <field name="destination" />
                            <field name="driver_id" />
                            <field name="passenger_ids" widget="many2many_tags" />
                            <field name="description" />
                        </group>
                        <group>
                            <group>
                                <field name="usage_time" />
                                <field name="start_odometer" />
                                <field name="start_tank" />
                            </group>
                            <group>
                                <field name="end_time" />
                                <field name="end_odometer" />
                                <field name="end_tank" />
                            </group>
                        </group>
                        <notebook>
                            <page name="equipment" string="Equipment">
                                <field name="equipment_ids">
                                    <tree editable="bottom">
                                        <field name="usage_id" invisible="1" />
                                        <field name="equipment_id" />
                                        <field name="remark" />
                                        <button name="action_good_checking" type="object" icon="fa-check-circle-o" title="Good" width="0.1" options="{&quot;warn&quot;: true}"/>
                                        <button name="action_bad_checking" type="object" icon="fa-times-circle-o" title="Bad" width="0.1" options="{&quot;warn&quot;: true}"/>
                                        <button name="action_show_history_checked" type="object" icon="fa-history" title="Bad" width="0.1" options="{&quot;warn&quot;: true}"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="condition" string="Condition">
                                <field name="condition_ids">
                                    <tree editable="bottom">
                                        <field name="usage_id" invisible="1" />
                                        <field name="part" />
                                        <button name="action_good_checking" type="object" icon="fa-check-circle-o" title="Good" width="0.1" options="{&quot;warn&quot;: true}"/>
                                        <button name="action_bad_checking" type="object" icon="fa-times-circle-o" title="Bad" width="0.1" options="{&quot;warn&quot;: true}"/>
                                        <button name="action_show_history_checked" type="object" icon="fa-history" title="Bad" width="0.1" options="{&quot;warn&quot;: true}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="fleet_usage_view_tree" model="ir.ui.view">
            <field name="name">fleet.usage.view.tree</field>
            <field name="model">fleet.usage</field>
            <field name="arch" type="xml">
                <tree string="Fleet Usage">
                    <field name="date" />
                    <field name="driver_id" />
                    <field name="destination" />
                    <field name="usage_time" />
                    <field name="end_time" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="fleet_usage_action" model="ir.actions.act_window">
            <field name="name">Fleet Usage</field>
            <field name="res_model">fleet.usage</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
            id="fleet_usage_menu"
            name="Usage"
            action="fleet_usage_action"
            parent="fleet.fleet_vehicles"
            sequence="10"
        />

        
        <record id="fleet_checked_view_form" model="ir.ui.view">
            <field name="name">fleet.checked.view.form</field>
            <field name="model">fleet.checked</field>
            <field name="arch" type="xml">
                <form string="History">
                    <sheet>
                        <group>
                            <field name="user_id" attrs="{'readonly': True}" />
                            <field name="checked_date" attrs="{'readonly': True}" />
                            <field name="equipment_id" attrs="{'readonly': True, 'invisible': [('equipment_id', '=', False)]}" />
                            <field name="condition_id" attrs="{'readonly': True, 'invisible': [('condition_id', '=', False)]}" />
                        </group>
                        <group>
                            <field name="remark" attrs="{'readonly': True}" />
                            <field name="state" attrs="{'readonly': True}" />
                            <field name="condition" attrs="{'readonly': True}" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="fleet_checked_view_tree" model="ir.ui.view">
            <field name="name">fleet.checked.view.tree</field>
            <field name="model">fleet.checked</field>
            <field name="arch" type="xml">
                <tree string="History">
                    <field name="user_id" />
                    <field name="checked_date" />
                    <field name="equipment_id" optional="hide" />
                    <field name="condition_id" optional="hide" />
                    <field name="remark" optional="hide" />
                    <field name="condition" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="fleet_checked_action" model="ir.actions.act_window">
            <field name="name">History</field>
            <field name="res_model">fleet.checked</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>


        <record id="res_users_view_form_profile_inherit_fleet_usage" model="ir.ui.view">
            <field name="name">res.users.view.form.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="hr.res_users_view_form_profile"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_show_fleet_usage" class="oe_stat_button" icon="fa-bus" type="object" string="Fleet Usage"></button>
                </xpath>
            </field>
        </record>
    
    </data>

</odoo>