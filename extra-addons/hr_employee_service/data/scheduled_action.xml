<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="ir_cron_data_update_employee_service" model="ir.cron">
            <field name="sequence">1000</field>
            <field name="name">Employee: Update Employee Service</field>
            <field name="model_id" ref="hr.model_hr_employee" />
            <field name="state">code</field>
            <field name="code">
                model._cron_update_employee_service()
            </field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="DateTime.now().replace(hour=5, minute=0, second=0) + timedelta(days=1)"/>
            <field name="numbercall">-1</field>
        </record>

    </data>

</odoo>
